<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wordpress.actualizateya.randomdominionstarwars">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Layouts.SplahActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Layouts.PrincipalActivity"
            android:label="@string/title_activity_principal"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Layouts.ListActivity"
            android:label="@string/title_activity_list"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Layouts.PrincipalActivity" />
        </activity>
        <activity
            android:name=".Layouts.CardActivity"
            android:label="@string/title_activity_card"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Settings.Settings"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppThemeSttings"></activity>
        <activity android:name=".PrincipalTab"></activity>
    </application>

</manifest>