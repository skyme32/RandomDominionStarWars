<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wordpress.actualizateya.randomdominionstarwars">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Layouts.SplahActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Layouts.CardScrollingActivity"
            android:label="@string/title_activity_card_scrolling"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Layouts.PrincipalTab" />
        </activity>
        <activity
            android:name=".Layouts.PrincipalTab"
            android:label="@string/title_activity_principal"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".Settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppThemeSttings"
            android:parentActivityName="com.wordpress.actualizateya.randomdominionstarwars.Layouts.PrincipalTab" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wordpress.actualizateya.randomdominionstarwars.Layouts.PrincipalTab" />
        </activity>
    </application>

</manifest>